<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bihaika.android.asimplesudoku.MenuActivity">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3" />

    <Button
        android:layout_gravity="center"
        android:id="@+id/menu_button_easy"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="@string/menu_easy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_gravity="center"
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/menu_button_medium"
        android:text="@string/menu_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_gravity="center"
        android:id="@+id/menu_button_hard"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="@string/menu_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />


</LinearLayout>
